<ul n:class="nav,navbar-nav">
    <li n:class="$presenter->isLinkCurrent($menu->data->link,[id=>$menu->data->link_id]) ? active">
        <a href="{plink $menu->data->link,id=>$menu->data->link_id}">
            <span class="glyphicon glyphicon-home"></span>
            {_$menu->data->title}
        </a>
    </li>
    <li n:foreach="$menu->children as $menu" n:class="isset($breadcrumb[$menu->data->id])?active,$menu->children?dropdown">
        <a href="{plink $menu->data->link,id=>$menu->data->link_id}"{if $menu->children} class="dropdown-toggle" data-toggle="dropdown"{/if}>
            {_$menu->data->title} <b class="caret" n:tag-if="$menu->children"></b>
        </a>
        <ul n:if="$menu->children" class="dropdown-menu" n:inner-foreach="$menu->children as $menu">
            <li n:class="isset($breadcrumb[$menu->data->id])?active">
                <a href="{plink $menu->data->link,id=>$menu->data->link_id}">
                    {_$menu->data->title}
                </a>
            </li>
        </ul>
    </li>
</ul>